{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "site/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "/apis/recruit/**", "function": "recruit"
    },{
      "source": "/apis/panel/**", "function": "panel"
    },{
      "source": "/apis/noti/**", "function": "noti"
    },{
      "source": "**", "destination": "/index.html"
    }]
  }
}
